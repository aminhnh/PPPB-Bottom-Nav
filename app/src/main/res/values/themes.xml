<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PPPBBottomNav" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PPPBBottomNav" parent="Base.Theme.PPPBBottomNav">
        <item name="colorPrimary">@color/main_blue</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="CustomTextTitle">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CustomButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="CustomActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/main_blue</item>
        <item name="titleTextStyle">@style/CustomActionBar.Text</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="CustomActionBar.Text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>